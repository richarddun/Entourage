#:kivy 2.2.0
#:import Factory kivy.factory.Factory

<ConfiguratorPopup@Popup>:
    title: 'Configuration'
    BoxLayout:


        GridLayout:
            cols:2
            rows:8
            Label:
                text: 'Config one'
            ToggleButton:
                text: 'Yes'
                group: 'first'
            Label:
                text: 'Config one'
            ToggleButton:
                text: 'No'
                group: 'first'
            Label:
                text: 'Config one'
            ToggleButton:
                text: 'Maybe'
                group: 'first'
            Label:
                text: 'Config one'
            ToggleButton:
                text: 'Never'
                group: 'first'
            Label:
                text: 'Config one'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Exit'
                on_release: root.dismiss()



<ChattorFlow>:

    TextInput:
        id: outputwidget
        pos_hint:{'top':1,'left':1}
        size_hint: 1,.7
        text: 'waiting for input...'
        readonly: True
        background_color: 0.494, 0.749, 0.749, 0.8
        use_bubble: True

    TextInput:
        id: inputwidget
        pos_hint:{'bottom':1,'left':1}
        size_hint: .9,.3
        text: 'Textinput text here...'
        background_color: 0.749, 0.733, 0.494, 0.8
        on_touch_down: app.first_clear()
        #on_key_down: app.on_keyboard()

    Button:
        id: submitter
        text: 'Submit'
        pos_hint: {'right': 1, 'bottom': 1}
        size_hint: (.1, .1)
        on_press: app.submit()

    Button:
        id : vsession
        text: 'Push to Talk'
        pos_hint: {'center_x': .95, 'center_y': .15}
        size_hint: (.1,.1)
        on_press: app.voicemode_toggle()
    
    Button:
        id : switcher
        text: 'Settings'
        pos_hint: {'x':.9, 'y': .2}
        size_hint: (.1,.1)
        on_release: Factory.ConfiguratorPopup().open()
