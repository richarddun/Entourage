#:kivy 2.2.0

<ChattorFlow>:  
    FloatLayout:
        # For some reason have to dunk
        # a BoxLayout to snarf up all
        # the available space or this
        # just plain doesn't work
        # it took me an hour to get here
        # don't judge me
        size: root.width, root.height
        GridLayout:
            size_hint_x : .2
            size_hint_y : 1
            pos_hint: {'left':1,'right':.2}
            rows:3
            cols:0
            Button:
                text: 'b1'
            Button:
                text: 'b2'
            Button:
                text: 'b3'
        Label:
            id: 'outputwidget'
            pos_hint: {'left':.8,'right':1}
            size_hint_x: .8
            size_hint_y: .7
            id:'mylabel'
            text: 'Label Text here...'
        TextInput:
            id: 'inputwidget'
            pos_hint: {'left':.8,'right':1}
            size_hint_x: .8
            size_hint_y: .3

            #pos_hint: ('x':.)
            id: 'mytextinput'
            text: 'Textinput text here...'
