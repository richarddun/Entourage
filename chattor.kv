#:kivy 2.2.0

<ChattorFlow>:

    BoxLayout:
        orientation:'vertical'
        pos_hint:{'top':1,'left':1}

        TextInput:
            id: outputwidget
            text: 'waiting for input...'
            readonly: True
            background_color: 0.494, 0.749, 0.749, 0.8

        TextInput:
            id: inputwidget
            text: 'Textinput text here...'

    Button:
        id: submitter
        text: 'Submit'
        pos_hint: {'right': 1, 'bottom': 1}
        size_hint: (.1, .1)
        on_press: app.submit()
